.login {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100vh;
	background: linear-gradient(150deg, #fafdff 0%, #eef5ff 56%, #ffffff 100%);
	padding: 2.4rem;
}
.login-container {
	max-width: 48rem;
	padding-top: 3.2rem;
}
.login-container .card__header {
	text-align: center;
}
.login-form {
	display: flex;
	flex-direction: column;
	gap: 1.8rem;
	padding: 0.8rem 0;
}
.login-logo {
	position: relative;
	width: 100%;
	height: 36px;
	overflow: hidden;
	text-indent: -9999em;
}
.login-logo::before {
	content: "";
	position: absolute;
	top: 0;
	left: 50%;
	transform: translateX(-50%);
	width: 100%;
	height: 36px;
	background: url("../images/logo.png") no-repeat center / contain;
}
.login-desc {
	font-size: var(--font-size-md);
	color: var(--text-light);
	line-height: 1.4;
	margin-top: 0.8rem;
}
.login__footer {
	text-align: center;
	font-size: 1.1rem;
	color: var(--text-light);
	line-height: 1.4;
}