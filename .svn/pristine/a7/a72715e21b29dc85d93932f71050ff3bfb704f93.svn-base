:root {
  --page-bg: #f2f4f7;
  --card-bg: #ffffff;
  --card-border: #e2e8f0;
  --shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-2:  0 4px 6px -1px rgba(0, 0, 0, 0.14);
  --text-main: #1a1d1f;
  --text-sub: #5b6676;
  --muted: #8b95a1;
  --accent: #1a9332;
  --accent-2: #ffc700;
  --accent-3: #003675;
  --primary: #256ef4;
  --accent-soft: #e8efff;
  --line: #e2e8f0;
  --up-bg: #ffede6;
  --up-text: #cc4a00;
  --down-bg: #e7f0ff;
  --down-text: #1d4ed8;
  --flat-bg: #eef2f7;
  --flat-text: #58647a;
  --new-bg: #f3e8ff;
  --new-text: #7a32a8;
  --shell-max: 1440px;
  --shell-pad: 24px;
  --gap-md: 24px;
  --radius: 16px;
  --control-h: 48px;
  --control-radius: 8px;
  --rank-col: 40px;
  --term-col: 120px;
  --delta-col: 80px;
  --count-col: 60px;
}

* {
  box-sizing: border-box;
}

body {
  margin: 0;
  color: var(--text-main);
  background: var(--page-bg);
  letter-spacing: -0.02em;
}

body.modal-open,
body.is-busy {
  overflow: hidden;
}

.hidden {
  display: none;
}

/* page */
.dashboard-shell {
  display: flex;
  flex-direction: column;
  background: linear-gradient(150deg, #fafdff 0%, #eef5ff 56%, #ffffff 100%);
}
.dashboard-shell.is-blurred {
  filter: blur(3px);
  pointer-events: none;
  user-select: none;
}

/* nav-bar */
.nav-bar {
  width: 100%;
  border-bottom: 1px solid var(--line);
  background: rgba(255, 255, 255, 0.5);
}
.nav-inner {
  width: min(100%, var(--shell-max));
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 32px;
  margin: 0 auto;
}
.identity {
  display: flex;
  gap: 12px;
}
.brand-title {
  font-size: 1.9rem;
  font-weight: 700;
}
.nav-logo img {
  width: 84px;
}
.home-btn {
  font-size: 1.3rem;
}
.home-btn a {
  display: flex;
  align-items: center;
  gap: 4px;
  opacity: 0.6;
}
.home-btn a::before {
  display: inline-block;
  content: "";
  width: 16px;
  height: 16px;
  background: url("assets/index/ico_bread_home.svg") no-repeat center / contain;
}

/* header */
.hero-card {
  width: min(100%, var(--shell-max));
  margin: 0 auto;
  padding: 28px 32px 24px;
}
.hero-kicker {
  margin: 0;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 1.1rem;
  font-weight: 700;
  letter-spacing: 0.08em;
  color: var(--primary);
}

.hero-kicker::before {
  content: "";
  width: 18px;
  height: 2px;
  border-radius: 2px;
  background: var(--primary);
}

.hero-title {
  margin: 10px 0 0;
  font-size: 2.4rem;
  line-height: 1.2;
}
.hero-subtitle {
  margin: 8px 0 0;
  color: var(--text-sub);
  font-size: 1.4rem;
}

.dashboard-grid {
  width: min(100%, var(--shell-max));
  display: grid;
  grid-template-columns: repeat(12, minmax(0, 1fr));
  align-items: stretch;
  gap: var(--gap-md);
  padding: var(--shell-pad) var(--shell-pad) 48px;
  margin: 0 auto;
}
.dashboard-grid section {
  animation: rise 0.6s ease both;
}

.card {
  border: 1px solid var(--card-border);
  border-radius: var(--radius);
  background: var(--card-bg);
  box-shadow: var(--shadow);
  padding: 24px;
}

.card-head {
  margin-bottom: 14px;
}

.card-title {
  margin: 0;
  font-size: 1.9rem;
  line-height: 1.3;
}

.card-subtitle {
  margin: 6px 0 0;
  color: var(--text-sub);
  font-size: 1.3rem;
}

.search-strip {
  grid-column: 1 / -1;
}

.search-head {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 12px;
}

.strip-controls {
  display: block;
}

.search-row-top {
  display: flex;
  width: 100%;
  align-items: center;
  gap: 8px;
}

.district-field {
  width: 180px;
  min-width: 180px;
  flex: 0 0 180px;
}

.district-field .krds-form-select {
  width: 100%;
  height: 40px;
  border: 1px solid var(--line);
  border-radius: var(--control-radius);
  box-shadow: none;
  font-size: 1.3rem;
}

.search-input-field {
  flex: 1 1 auto;
  min-width: 0;
}

.search-input-field .krds-input {
  width: 100%;
  height: 40px;
  border: 1px solid var(--line);
  border-radius: var(--control-radius);
  box-shadow: none;
  padding: 0 14px;
  font-size: 1.4rem;
}

.action-buttons {
  display: flex;
  align-items: center;
  gap: 8px;
}

.action-buttons .krds-btn {
  height: 40px;
  margin: 0;
  border-radius: var(--control-radius);
  font-size: 1.4rem;
}

.reset-btn {
  width: 100px;
  min-width: 100px;
  flex: 0 0 100px;
  border: 1px solid #cbd5e1 !important;
  background: #ffffff;
  color: #334155;
}

.reset-btn:hover {
  background: #f8fafc;
  border-color: #b7c3d3;
}

.search-btn {
  width: 120px;
  min-width: 120px;
  flex: 0 0 120px;
  background: var(--accent-3);
  border-color: var(--accent-3);
  color: #ffffff;
}

.search-btn:hover {
  background: #00468a;
  border-color: #00468a;
}

.district-field .krds-form-select:focus,
.search-input-field .krds-input:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 4px rgba(30, 77, 183, 0.12);
}

.search-row-bottom {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16px;
  margin-top: 20px;
}

.period-presets {
  flex: 0 0 auto;
}

.preset-group {
  display: inline-flex;
  align-items: center;
  height: 40px;
  overflow: hidden;
  border: 1px solid var(--line);
  border-radius: var(--control-radius);
  background: #ffffff;
  flex-wrap: nowrap;
  gap: 0;
}

.preset-btn {
  height: 40px;
  min-width: 76px;
  border: 0;
  border-right: 1px solid var(--line);
  border-radius: 0;
  background: #ffffff;
  color: #364152;
  padding: 0 16px;
  font-size: 1.4rem;
  font-weight: 600;
  cursor: pointer;
  transition: background-color 0.18s ease, border-color 0.18s ease, box-shadow 0.18s ease;
}

.preset-btn:hover {
  border-color: #aeb9c7;
  background: #f4f7fc;
}

.preset-btn:last-child {
  border-right: 0;
}

.preset-btn.is-active {
  background: var(--primary);
  color: #ffffff;
}

.period-range {
  width: 320px;
  min-width: 320px;
  flex: 0 0 320px;
}

.date-range-field {
  height: 40px;
  border: 1px solid var(--line);
  border-radius: var(--control-radius);
  background: #ffffff;
  display: grid;
  grid-template-columns: minmax(0, 1fr) 20px minmax(0, 1fr);
  align-items: center;
  overflow: hidden;
}

.date-input.krds-input {
  height: 40px;
  border: 0;
  border-radius: 0;
  box-shadow: none;
  padding: 0 10px;
  font-size: 1.3rem;
}

.date-input.krds-input:focus {
  box-shadow: none;
  outline: none;
}

.range-separator {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 40px;
  font-weight: 700;
  color: #4b5563;
}

