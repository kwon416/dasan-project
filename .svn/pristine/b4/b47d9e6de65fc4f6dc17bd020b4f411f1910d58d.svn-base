.admin {
	display: flex;
	flex-direction: column;
	height: 100vh;
	background: linear-gradient(150deg, #fafdff 0%, #eef5ff 56%, #ffffff 100%);
}
/* header */
.admin-header {
	background: var(--color-bg);
	border-bottom: 1px solid var(--color-border);
}
.admin-header__inner {
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 5.6rem;
	padding: 0 2rem;
}
.admin-identity {
	display: flex;
	align-items: center;
	gap: 1.2rem;
}
.admin-title {
	font-size: var(--font-size-lg);
	line-height: 1.4;
	font-weight: 700;
}
.admin-logo img {
	width: 84px;
	min-width: 84px;
}
.admin-user {
	display: flex;
	align-items: center;
	gap: 1.2rem;
}
.user-profile {
	display: flex;
	align-items: center;
	font-size: var(--font-size-sm);
	color: var(--text-light);
	line-height: 1.4;
	gap: 0.4rem;
}
.user-icon {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 3.2rem;
	height: 3.2rem;
	border: 3px solid var(--color-primary-light);
	border-radius: 50%;
	background: var(--color-brand-3);
}
.user-icon .svg-icon {
	width: 1.6rem;
	height: 1.6rem;
	background-color: var(--white);
}
.user-id {
	position: relative;
	font-size: var(--font-size-sm);
	font-weight: 600;
	color: var(--color-brand-3);
	line-height: 1.4;
	padding-left: 0.4rem;
}
/* 로그아웃 버튼 */
.logout {
	height: auto;
	font-size: var(--font-size-sm);
	padding: 0.8rem;
}
.logout .svg-icon {
	width: 1.6rem;
	height: 1.6rem;
	background-color: var(--text-light);
}

/* container */
.admin-container {
	display: flex;
	flex: 1;
	overflow: hidden;
}
/* side-bar */
.admin-sidebar {
	width: 18rem;
	border-right: 1px solid var(--color-border);
	background: var(--color-bg);
}
.menu-item, .menu-item {
	width: 100%;
}
.menu-item a {
	display: flex;
	align-items: center;
	width: 100%;
	height: 100%;
	font-size: var(--font-size-sm);
	color: var(--text-default);
	border-bottom: 1px solid var(--color-border);
	background-color: transparent;
	padding: 1.2rem 0.8rem 1.2rem 1.6rem;
	gap: 0.8rem;
}
.menu-item.is-active a {
	font-weight: 600;
	color: var(--color-primary);
	border-right: 4px solid var(--color-primary);
	/* background-color: rgba(177, 207, 251, 0.1); */
}
.menu-item .svg-icon {
	width: 1.9rem;
	height: 1.9rem;
	background-color: var(--text-default);
}
.menu-item.is-active .svg-icon {
	background-color: var(--color-primary);
}


/* admin content */
.admin-content {
	flex: 1;
	padding: 2.4rem;
	overflow-y: auto;
}
.admin-content__header {
	margin-bottom: 2.4rem;
}
.admin-content__title {
	font-size: var(--font-size-lg);
	font-weight: 600;
	line-height: 1.4;
	color: var(--text-default);
}

/* 사용자 관리 카드*/
.user-card .card-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	gap: 0.8rem;
}
.list-select {
	display: flex;
	align-items: center;
	gap: 0.8rem;
}
.list-total {
	display: flex;
	align-items: center;
	font-size: var(--font-size-sm);
	line-height: 1.4;
	color: var(--text-default);
}
.total-number {
	font-weight: 600;
	color: var(--text-primary);
	margin-left: 0.4rem;
}
.list-select .search {
	width: 240px;
}
.list-select select
.list-actions {
	justify-content: flex-end;
}


/* 테이블 버튼 */
.krds-table-wrap .svg-icon {
	width: 1.6rem;
	height: 1.6rem;
	margin-right: -3px;
}
.krds-table-wrap .etc {
	height: unset;
	font-size: var(--font-size-sm);
	text-indent: -99999px;
	border-color: transparent;
	border-radius: var(--border-radius-sm);
	padding: 6px;
}
.krds-table-wrap .etc:hover {
	background-color: transparent;
}
.krds-table-wrap .delete {
	color: var(--color-error);
}
.krds-table-wrap .delete .svg-icon {
	background-color: var(--color-error);
}
.krds-table-wrap .edit {
	color: var(--text-light);
}
.krds-table-wrap .edit .svg-icon {
	background-color: var(--text-light);
}



/* 카테고리 관리 카드 */
.category-card {
	max-width: 36%;
	min-width: 252px;
}
.category-card .card-content{
	flex: 1;
}
/* 카테고리 트리 */
.category-tree-wrap {
	height: 100%;
	min-height: 192px;
	display: flex;
	flex-direction: column;
	border: 1px solid var(--color-border);
	border-radius: var(--border-radius);
	background: var(--color-bg-alt);
	padding: 1.2rem 1.6rem;
	gap: 0.8rem;
}
.tree-header {
	font-size: var(--font-size-md);
	font-weight: 600;
	color: var(--text-default);
	line-height: 1.4;
	margin-bottom: 0.2rem;
}
.tree-list {
	display: flex;
	flex-direction: column;
	gap: 0.8rem;
}
.tree-item a {
	display: flex;
	align-items: center;
	width: 100%;
	height: 40px;
	font-size: var(--font-size-sm);
	font-weight: 600;
	color: var(--text-light);
	text-align: left;
	border: 1px solid var(--color-border);
	border-radius: var(--border-radius);
	background: var(--color-bg);
	padding: 0 1.2rem;
	transition: background-color 0.18s ease, border-color 0.18s ease;
	cursor: pointer;
}
.tree-item a:hover {
	border-color: #a8bde0;
	background: #edf3ff;
}
.tree-item.is-active a {
	border-color: var(--color-primary);
	background: var(--color-primary);
	color: var(--white);
}
.category-wrap,
.keyword-wrap {
	display: flex;
	flex-direction: column;
	gap: 1.6rem;
}
.category-wrap .btn-wrap,
.keyword-wrap .btn-wrap {
	justify-content: flex-end;
}
.category-wrap .svg-icon,
.keyword-wrap .svg-icon {
	width: 1.6rem;
	height: 1.6rem;
	margin-right: -3px;
}
.category-wrap .krds-btn,
.keyword-wrap .krds-btn {
	height: 32px;
	font-size: var(--font-size-sm);
	border-radius: var(--border-radius-sm);
	padding: 6px 10px;
}
.category-wrap .krds-btn.add,
.keyword-wrap .krds-btn.add {
	color: var(--color-primary);
	border: 1px solid var(--color-primary);
	background: var(--color-bg);
}
.category-wrap .krds-btn.delete {
	color: var(--color-error);
	border: 1px solid var(--color-error);
	background: var(--color-bg);
}
.category-wrap .krds-btn.save,
.keyword-wrap .krds-btn.save {
	color: var(--white);
	border: 1px solid var(--color-brand-3);
	background: var(--color-brand-3);
}
.category-wrap .add .svg-icon,
.keyword-wrap .add .svg-icon {
	background-color: var(--color-primary);
}
.category-wrap .delete .svg-icon {
	background-color: var(--color-error);
}
.category-wrap .save .svg-icon
.keyword-wrap .save .svg-icon {
	background-color: var(--white);
}
.category-wrap {
	height: 100%;
}
.keyword-wrap .krds-table-wrap {
	max-height: 46em;
	border-bottom: 1px solid var(--color-border);
	overflow-y: auto;
}





@media (max-width: 768px) {
	.admin-header__inner {
		flex-wrap: wrap;
		height: 8.6rem;
		padding: 0.8rem 2rem;
	}
	.admin-identity {
		flex: 1;
		justify-content: flex-start;
	}
	.admin-title {
		white-space: nowrap;
	}
	.admin-user {
		flex: 1;
		justify-content: flex-end;
		gap: 0.4rem;
	}
	.admin-container {
		flex-direction: column;
	}
	/* 사이드바 */
	.admin-sidebar {
		width: 100%;
		border-right: none;
	}
	.admin-menu {
		display: flex;
	}
	.menu-item a {
		border-right: 1px solid var(--color-border);
		justify-content: center;
	}
	.menu-item:last-of-type a {
		border-right: none;
	}
	.menu-item.is-active a {
		border-right: 1px solid var(--color-border);
		border-bottom: 4px solid var(--color-primary);
	}
	/* 사용자 관리 */
	.user-card .card-header {
		flex-direction: column;
	}
	.user-card .card-header > div {
		width: 100%;
	}
	.user-card .card-header .btn-wrap button {
		width: 100%;
	}
	/* 테이블 기본 */
	.krds-table-wrap {
		width: unset;
	}
	.krds-table-wrap .tbl {
		width: 100%;
    }
	/* 페이지네이션 */
	.krds-pagination {
		flex-wrap: nowrap;
	}
	.krds-pagination .page-links {
		width: unset;
	}
	.krds-pagination .page-navi.next {
		order: 3;
	}
	/* 키워드 관리 */
	.col {
		flex-wrap: wrap;
	}
	.card {
		width: 100%;
		max-width: unset;
	}
	.category-wrap .btn-wrap button,
	.keyword-wrap .btn-wrap button {
		flex: 1;
	}
	.keyword-wrap .krds-table-wrap .tbl {
		min-width: 50rem;
	}
	/* 로그 관리 */
	.tab {
		max-width: unset;
		width: 100%;
	}
	.log-card .krds-table-wrap .tbl {
		min-width: 50rem;
	}
}